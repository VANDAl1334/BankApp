<Page x:Class="UserApp.Window.Main.PgExit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserApp.Window.Main"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="750"
      Title="PgExit">

    <Grid>

        <TextBlock FontFamily="Roboto" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 150">Вы точно хотите выйти?</TextBlock>
        <Grid Margin="0 100 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button VerticalAlignment="Center" HorizontalAlignment="Center" Height="30" Width="100" Content="Да" FontSize="18" FontFamily="Roboto" Click="Button_ClickYes"></Button>
            <Button Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="30" Width="100" Content="Отмена" FontSize="18" FontFamily="Roboto" Click="Button_ClickCancel"></Button>
        </Grid>
    </Grid>
</Page>
