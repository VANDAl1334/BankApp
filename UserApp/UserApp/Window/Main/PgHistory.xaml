<Page x:Class="UserApp.Window.Main.PgHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserApp.Window.Main"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="History" Loaded="Page_Loaded">
    <Grid>
        <ScrollViewer>
            
            <StackPanel x:Name="listPanel">

            </StackPanel>
        </ScrollViewer>
        <TextBlock x:Name="NonHistory" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" FontSize="26">У вас еще нет историй</TextBlock>
        <ComboBox x:Name="countTranz" Margin="0 0 17 0" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="20" SelectionChanged="countTranz_SelectionChanged"/>
    </Grid>
</Page>
