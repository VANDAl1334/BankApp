<Window x:Class="UserApp.WndMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserApp"
        mc:Ignorable="d"
        Title="Главная" Height="450" Width="797" WindowStartupLocation="CenterScreen" WindowStyle="None" MouseDown="Window_MouseDown" ResizeMode="CanMinimize" Icon="/Window/Main/bank.ico">
    <Grid x:Name="background">
        <Grid>
            <Button Content="История переводов" Width="200" Foreground="White" Click="BtnHystory_Click" Background="Brown" Style="{StaticResource MaterialDesignRaisedButton}"/>
        </Grid>
        <Grid Height="30" Background="Brown" Margin="47 0 0 0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Cursor="Hand">
                <Image Source="/bank.png"/>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15 0 0 0" FontSize="18" Foreground="White">Главная</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button BorderBrush="Transparent" Background="Transparent" Click="BtnMin_Click">
                    <Image Source="/hidden.png"/>
                </Button>
                <Button BorderBrush="Transparent" Background="Transparent" Click="BtnClose_Click">
                    <Image Source="/close.png"/>
                </Button>
            </StackPanel>
        </Grid>
        <Rectangle>
            <Rectangle.RenderTransform>
                <RotateTransform Angle="0" CenterX="50" CenterY="50"  x:Name="transform"/>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Grid Margin="47 30 0 0">
            <Frame Name="MainFrame"/>
            <Grid Height="100" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Grid.Row="0" Text="Баланс " FontSize="22" Foreground="Black" />
                    <TextBlock Grid.Row="0" Text="{Binding Balance}" FontSize="22" Foreground="Black"/>
                </StackPanel>
                <ComboBox Grid.Row="1" FontSize="22" x:Name="NmBill" ItemsSource="{Binding NumberBill}" HorizontalAlignment="Center" Width="400" materialDesign:HintAssist.Hint="Ваши счета" HorizontalContentAlignment="Center"/>
            </Grid>
            <Border Padding="20" MouseDown="Border_MouseDown" x:Name="brdrotate" Margin="0 40 0 0" Width="450" Height="230" CornerRadius="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Color="#FFB30000" Offset="0"/>
                            <GradientStop Color="#FFFF6A6A" Offset=".9"/>
                            <GradientStop Color="#FFFFA095" Offset="1"/>
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Color="Red" Direction="45" Opacity=".4" RenderingBias="Performance" ShadowDepth="30"/>
                </Border.Effect>
                <StackPanel>
                    <Label Content="Ваш номер карты" Foreground="White" FontSize="20" Grid.Column="0"/>
                    <TextBlock x:Name="NmCard" Height="37" Text="{Binding NumberCard}" Foreground="White" FontFamily="Roboto" FontSize="25" Margin="0 0 0 10"/>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="CVV" FontSize="25" Grid.Column="1" Foreground="White"/>
                        <TextBlock x:Name="CVV" Text="{Binding CVV}" FontSize="30" Foreground="White"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Orientation="Horizontal">
                        <Label Content="ММ/ДД" FontSize="25" Foreground="White"/>
                        <TextBlock x:Name="Validity" Text="{Binding Validity}" FontSize="25" Foreground="White"/>
                    </StackPanel>
                    <TextBlock x:Name="fullname" FontSize="20" Foreground="White"/>
                </StackPanel>
            </Border>
            <Button Content="Создать платежный счет" Click="BtnCreate_Click" VerticalAlignment="Bottom" Margin="0 0 0 30" HorizontalAlignment="Center" Background="Brown" Style="{StaticResource MaterialDesignRaisedButton}"/>
        </Grid>
        <Grid x:Name="Menu" Width="47" MinWidth="47" MaxWidth="225" HorizontalAlignment="Left" Background="#FFBB0000">
            <StackPanel>
                <Grid Height="40" VerticalAlignment="Top">
                    <Button Style="{StaticResource MaterialDesignIconButton}" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Right" VerticalAlignment="Center" Height="35" Width="46" Click="BtnPanel_Click">
                        <Image Source="/Window/Main/list.png" Cursor="Hand"/>
                    </Button>
                </Grid>
                <ListView FontFamily="Roboto" FontSize="23" Foreground="White" Background="Transparent" BorderBrush="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListViewItem Height="45" HorizontalAlignment="Left" >
                        <StackPanel Orientation="Horizontal" >
                            <Image Height="30" HorizontalAlignment="Left" Source="/Window/Main/user.png" />
                            <TextBlock x:Name="login" FontSize="16" Foreground="White" VerticalAlignment="Center" Margin="20 0 0 0" Width="155" FontFamily="Roboto"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
                <ListView  FontFamily="Roboto" FontSize="23" Foreground="White" Background="Transparent" BorderBrush="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListViewItem Height="45" HorizontalAlignment="Left" MouseLeftButtonUp="ListView_Home">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="30" VerticalAlignment="Center" Source="/Window/Main/home.png" />
                            <TextBlock Text="Главная" Margin="20 0 0 0" VerticalAlignment="Center" Width="155"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
                <ListView FontFamily="Roboto" FontSize="23" Foreground="White" Background="Transparent" BorderBrush="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListViewItem Height="45" HorizontalAlignment="Left" MouseLeftButtonUp="ListView_Transfer">
                        <StackPanel Orientation="Horizontal" >
                            <Image Height="30" VerticalAlignment="Center" Source="/Window/Main/transfer.png" />
                            <TextBlock Text="Переводы" Margin="20 0 0 0" VerticalAlignment="Center" Width="155"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
                <ListView FontFamily="Roboto" FontSize="23" Foreground="White" Background="Transparent" BorderBrush="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListViewItem Height="45" HorizontalAlignment="Left" MouseLeftButtonUp="ListView_History">
                        <StackPanel Orientation="Horizontal" >
                            <Image Height="30" VerticalAlignment="Center" Source="/Window/Main/history.png" />
                            <TextBlock Text="История" Margin="20 0 0 0" VerticalAlignment="Center" Width="155"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
                <ListView FontFamily="Roboto" FontSize="23" Foreground="White" Background="Transparent" BorderBrush="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListViewItem Height="45" HorizontalAlignment="Left" MouseLeftButtonUp="ListView_Settings">
                        <StackPanel Orientation="Horizontal" >
                            <Image Height="30" VerticalAlignment="Center" Source="/Window/Main/settings.png" />
                            <TextBlock Text="Параметры" Margin="20 0 0 0" VerticalAlignment="Center" Width="155"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
                <ListView FontFamily="Roboto" FontSize="23" Foreground="White" Background="Transparent" BorderBrush="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
                    <ListViewItem Height="45" HorizontalAlignment="Left" MouseLeftButtonUp="ListView_Exit">
                        <StackPanel Orientation="Horizontal" >
                            <Image Height="30" VerticalAlignment="Center" Source="/Window/Main/exit.png" />
                            <TextBlock Text="Выход" Margin="20 0 0 0" VerticalAlignment="Center" Width="155"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
